<div class="card" >
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name%> <%= @friend.last_name %></h5>
    <p class="card-text"> 
      <strong>Email:</strong>
      <%= @friend.email %>
    </p>
    <p class="card-text"> 
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </p>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>


